<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">



    <!-- Top Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue_900"
            app:title="" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout"

        android:layout_above="@id/bottomNavigation"
        android:background="#F3F4F6"/>

    <!-- Custom Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:weightSum="6"
        android:baselineAligned="false">

        <!-- Item 1: Home -->
        <LinearLayout
            android:id="@+id/nav_dashboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_dashboard"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Home"
                android:src="@drawable/ic_dashboard"
                app:tint="@color/blue_900" />

            <TextView
                android:id="@+id/txt_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/blue_900"
                android:textSize="10sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Item 2: Apply -->
        <LinearLayout
            android:id="@+id/nav_applications"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_applications"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Apply"
                android:src="@drawable/ic_description"
                app:tint="@color/gray_600" />

            <TextView
                android:id="@+id/txt_applications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:textColor="@color/gray_600"
                android:textSize="10sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Item 3: Pay -->
        <LinearLayout
            android:id="@+id/nav_payments"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_payments"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Pay"
                android:src="@drawable/ic_wallet"
                app:tint="@color/gray_600" />

            <TextView
                android:id="@+id/txt_payments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay"
                android:textColor="@color/gray_600"
                android:textSize="10sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Item 4: Reqs -->
        <LinearLayout
            android:id="@+id/nav_requirements"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_requirements"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Reqs"
                android:src="@drawable/ic_description"
                app:tint="@color/gray_600" />

            <TextView
                android:id="@+id/txt_requirements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reqs"
                android:textColor="@color/gray_600"
                android:textSize="10sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Item 5: Appts -->
        <LinearLayout
            android:id="@+id/nav_appointments"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_appointments"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Appts"
                android:src="@drawable/ic_schedule"
                app:tint="@color/gray_600" />

            <TextView
                android:id="@+id/txt_appointments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appts"
                android:textColor="@color/gray_600"
                android:textSize="10sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Item 6: Profile -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Profile"
                android:src="@drawable/ic_person"
                app:tint="@color/gray_600" />

            <TextView
                android:id="@+id/txt_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/gray_600"
                android:textSize="10sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
