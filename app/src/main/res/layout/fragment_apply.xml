<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E5E7EB"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="24dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_description"
                        app:tint="@color/blue_900"/>
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apply for a Loan"
                        android:textColor="@color/blue_900"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check your credit limit and apply for a new loan"
                    android:textColor="@color/gray_300"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Pending Applications Warning (Hidden by default) -->
        <LinearLayout
            android:id="@+id/pendingWarningBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FEFCE8"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_marginBottom="24dp">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
                app:tint="#854D0E"/>
                
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending Applications Found"
                    android:textStyle="bold"
                    android:textColor="#854D0E"/>
                <TextView
                    android:id="@+id/pendingWarningText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have pending applications. You cannot apply for these specific loan types until they are processed."
                    android:textColor="#A16207"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- My Pending Applications Section (Hidden by default) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/pendingApplicationsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@color/blue_50"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_description"
                        app:tint="@color/blue_900"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="My Pending Applications"
                        android:textColor="@color/blue_900"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp"/>

                    <TextView
                        android:id="@+id/pendingAppsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:background="@drawable/bg_info_box"
                        android:backgroundTint="@color/blue_600"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:padding="4dp"
                        android:paddingHorizontal="8dp"
                        android:minWidth="24dp"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- List of pending applications -->
                <LinearLayout
                    android:id="@+id/pendingApplicationsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <!-- Items will be added dynamically -->
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Credit Limit Card -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_blue"
            android:padding="24dp"
            android:layout_marginBottom="24dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Credit Limit"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Based on verified income"
                            android:textColor="#BFDBFE"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">
                        <TextView
                            android:id="@+id/creditLimitAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loading..."
                            android:textColor="#FBBF24"
                            android:textStyle="bold"
                            android:textSize="24sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Available to Borrow"
                            android:textColor="#BFDBFE"
                            android:textSize="10sp"
                            android:textAllCaps="true"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Custom Progress Bar -->
                <ProgressBar
                    android:id="@+id/creditLimitProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:progressDrawable="@drawable/custom_progress"
                    android:progressTint="#10B981"
                    android:progressBackgroundTint="#1E3A8A"
                    android:progress="0" 
                    android:layout_marginBottom="8dp"/>
                    
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/usedCreditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Calculating..."
                        android:textColor="#BFDBFE"
                        android:textSize="12sp"
                        android:textAllCaps="true"/>
                     <TextView
                        android:id="@+id/creditPercentageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- Limit Booster (New) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="1dp"
            android:layout_marginBottom="24dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <!-- Toggle Header -->
                <LinearLayout
                    android:id="@+id/boosterHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="#F9FAFB"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">
                    
                    <ImageView
                        android:id="@+id/boosterChevron"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more"
                        app:tint="@color/gray_500"/>
                        
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Limit Booster Checklist"
                        android:textColor="@color/blue_900"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp"/>
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage Documents"
                        android:textColor="@color/blue_600"
                        android:textStyle="bold"
                        android:textSize="12sp"/>
                </LinearLayout>
                
                <!-- Content (Hidden by default) -->
                <LinearLayout
                    android:id="@+id/boosterContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">
                    <!-- Items will be added via code -->
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
        <!-- Loan Type Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What type of loan do you need?"
            android:textColor="@color/blue_900"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>
            
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="24dp">
            
            <!-- Type 1: Personal -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                
                <LinearLayout
                    android:id="@+id/cardPersonal"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_info_box"
                    android:backgroundTint="#EFF6FF"
                    android:padding="16dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">
                    
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_wallet"
                        app:tint="@color/blue_900"
                        android:layout_marginBottom="8dp"/>
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.25% MO."
                        android:textColor="@color/gray_500"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
                
                <!-- Pending Overlay -->
                <FrameLayout
                    android:id="@+id/overlayPersonal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80FFFFFF"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PENDING"
                        android:background="#FEF3C7"
                        android:textColor="#92400E"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:padding="4dp"
                        android:layout_gravity="center"/>
                </FrameLayout>
            </FrameLayout>
            
            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>
            
            <!-- Type 2: Home -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                
                <LinearLayout
                    android:id="@+id/cardHome"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_info_box"
                    android:backgroundTint="@color/white"
                    android:padding="16dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">
                    
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_account_balance"
                        app:tint="@color/gray_300"
                        android:layout_marginBottom="8dp"/>
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textStyle="bold"
                        android:textColor="@color/gray_300"
                        android:textSize="14sp"/>
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6-8.5% P.A."
                        android:textColor="@color/gray_400"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Pending Overlay -->
                <FrameLayout
                    android:id="@+id/overlayHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80FFFFFF"
                    android:visibility="gone">
                     <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PENDING"
                        android:background="#FEF3C7"
                        android:textColor="#92400E"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:padding="4dp"
                        android:layout_gravity="center"/>
                </FrameLayout>
            </FrameLayout>

            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

            <!-- Type 3: Multi -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                
                <LinearLayout
                    android:id="@+id/cardMulti"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_info_box"
                    android:backgroundTint="@color/white"
                    android:padding="16dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">
                    
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_trending_up"
                        app:tint="@color/gray_300"
                        android:layout_marginBottom="8dp"/>
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Multi"
                        android:textStyle="bold"
                        android:textColor="@color/gray_300"
                        android:textSize="14sp"/>
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7.0% P.A."
                        android:textColor="@color/gray_400"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Pending Overlay -->
                <FrameLayout
                    android:id="@+id/overlayMulti"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80FFFFFF"
                    android:visibility="gone">
                     <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PENDING"
                        android:background="#FEF3C7"
                        android:textColor="#92400E"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:padding="4dp"
                        android:layout_gravity="center"/>
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>

        <!-- Requirements Preview (New) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#EFF6FF"
            app:strokeWidth="1dp"
            app:strokeColor="#DBEAFE"
            android:layout_marginBottom="24dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/reqTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requirements for Personal Loan"
                    android:textColor="@color/blue_900"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>
                
                <LinearLayout
                    android:id="@+id/reqList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- populated by kotlin -->
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Loan Amount -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan Amount"
            android:textColor="@color/blue_900"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>
            
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E5E7EB"
            android:layout_marginBottom="24dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <TextView
                    android:id="@+id/amountDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="₱50,000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"/>
                    
                <com.google.android.material.slider.Slider
                    android:id="@+id/amountSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="5000"
                    android:valueTo="150000"
                    android:stepSize="1000"
                    android:value="50000"/>
                    
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Min: ₱5k"
                        android:textColor="@color/gray_300"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/maxAmountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max: ..."
                        android:textColor="@color/gray_300"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Terms -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan Term"
            android:textColor="@color/blue_900"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E5E7EB"
            android:layout_marginBottom="32dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/termDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12 months"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <com.google.android.material.slider.Slider
                    android:id="@+id/termSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="6"
                    android:valueTo="36"
                    android:stepSize="6"
                    android:value="12"/>
                    
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Min: 6 mos"
                        android:textColor="@color/gray_300"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max: 36 mos"
                        android:textColor="@color/gray_300"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
        <Button
            android:id="@+id/btnSubmitApplication"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Continue Application"
            android:backgroundTint="@color/blue_900"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:icon="@drawable/ic_trending_up"
            app:iconGravity="textStart"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
