<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E5E7EB"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/loanType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Loan"
                    android:textColor="@color/blue_900"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/loanId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loan #100021"
                    android:textColor="@color/gray_300"
                    android:textSize="12sp"/>
            </LinearLayout>
            
            <TextView
                android:id="@+id/loanStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="#166534"
                android:background="#DCFCE7"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:textStyle="bold"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Loan Amount:"
                    android:textColor="@color/gray_300"/>
                <TextView
                    android:id="@+id/loanAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱50,000.00"
                    android:textColor="@color/blue_900"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Term:"
                    android:textColor="@color/gray_300"/>
                <TextView
                    android:id="@+id/loanTerm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 months"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Monthly Payment:"
                    android:textColor="@color/gray_300"/>
                <TextView
                    android:id="@+id/monthlyPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱4,500.00"
                    android:textColor="#CA8A04"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:background="@drawable/bg_info_box"
            android:padding="1dp" 
            android:backgroundTint="@android:color/transparent">
            
             <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E7EB"
                android:layout_marginBottom="16dp"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Remaining:"
                    android:textSize="14sp"
                    android:textColor="@color/gray_300"/>
                <TextView
                    android:id="@+id/loanBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱25,000.00"
                    android:textColor="#DC2626"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/loanProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progressDrawable="@drawable/custom_progress"
                android:progress="50"
                android:max="100"/>
                
            <TextView
                android:id="@+id/percentPaid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50% paid"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/gray_300"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">
            
            <Button
                android:id="@+id/btnSchedule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Schedule"
                android:backgroundTint="@color/white"
                android:textColor="@color/blue_900"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/blue_900"
                android:layout_marginEnd="8dp"/>
                
            <Button
                android:id="@+id/btnPay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pay"
                android:backgroundTint="@color/blue_900"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        
    </LinearLayout>
</androidx.cardview.widget.CardView>
