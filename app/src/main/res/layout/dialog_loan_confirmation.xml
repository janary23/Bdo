<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_rounded_white">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Loan Application"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please review your loan details before submitting"
        android:textSize="14sp"
        android:textColor="@color/gray_600"
        android:layout_marginBottom="24dp"/>

    <!-- Loan Details Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/blue_50"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Loan Type -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Loan Type"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"/>

                <TextView
                    android:id="@+id/confirmLoanType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Loan"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!-- Amount -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Loan Amount"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"/>

                <TextView
                    android:id="@+id/confirmAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱50,000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_900"/>
            </LinearLayout>

            <!-- Term -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Loan Term"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"/>

                <TextView
                    android:id="@+id/confirmTerm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 months"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!-- Monthly Payment -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_200"
                android:layout_marginVertical="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Monthly Payment"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"/>

                <TextView
                    android:id="@+id/confirmMonthlyPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱4,167"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_700"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Credit Limit Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_rounded_light"
        android:padding="12dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_info"
            android:layout_marginEnd="8dp"
            app:tint="@color/blue_600"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/confirmCreditInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Credit: ₱100,000"
                android:textSize="12sp"
                android:textColor="@color/gray_700"/>

            <TextView
                android:id="@+id/confirmRemainingCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining after this loan: ₱50,000"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Terms and Conditions -->
    <LinearLayout
        android:id="@+id/termsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <CheckBox
            android:id="@+id/cbTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:checked="false"
            android:clickable="false"
            android:focusable="false"/>

        <TextView
            android:id="@+id/tvTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to the Terms and Conditions"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:clickable="false"
            android:focusable="false"/>
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Cancel"
            android:textColor="@color/gray_600"
            android:background="@android:color/transparent"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Confirm &amp; Submit"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue_600"
            android:paddingHorizontal="24dp"/>
    </LinearLayout>

</LinearLayout>
