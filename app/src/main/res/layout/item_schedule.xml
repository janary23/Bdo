<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="12dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/schedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mar 15, 2026"
            android:textColor="@color/black"/>
            
        <TextView
            android:id="@+id/schedInstallment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Installment #1"
            android:textSize="10sp"
            android:textColor="@color/gray_500"/>
    </LinearLayout>

    <TextView
        android:id="@+id/schedAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="â‚±5,200.00"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/schedStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPCOMING"
        android:textSize="10sp"
        android:textStyle="bold"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:background="@drawable/rounded_pill"
        android:backgroundTint="@color/gray_200"
        android:textColor="@color/gray_700"/>

</LinearLayout>
