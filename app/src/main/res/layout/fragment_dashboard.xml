<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E5E7EB"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="24dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="24dp"
                android:gravity="center_vertical">
                
                <!-- Left: Title & Welcome -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">
                        
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_dashboard"
                            app:tint="@color/blue_900"/>
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dashboard Overview"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue_900"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                    
                    <TextView
                        android:id="@+id/welcomeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome back, Guest!"
                        android:textColor="@color/gray_300"
                        android:textSize="14sp"/>
                </LinearLayout>
                
                <!-- Right: Date -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Date"
                        android:textColor="@color/gray_300"
                        android:textSize="14sp"/>
                        
                    <TextView
                        android:id="@+id/dateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jan 01, 2026"
                        android:textColor="@color/blue_900"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Stats Grid Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:weightSum="2"
            android:layout_marginBottom="24dp">

            <!-- Active Loans -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E7EB"
                app:cardBackgroundColor="@color/white"
                android:layout_marginEnd="12dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active Loans"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray_300"
                                android:layout_marginBottom="4dp"/>
                            <TextView
                                android:id="@+id/activeLoansCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="30sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_wallet"
                            app:tint="@color/blue_900"
                            android:background="@drawable/bg_info_box"
                            android:backgroundTint="#EFF6FF"
                            android:padding="12dp"/>
                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In good standing"
                        android:textColor="#16A34A"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@drawable/ic_trending_up"
                        android:drawablePadding="4dp"
                        android:drawableTint="#16A34A"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Next Payment -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E7EB"
                app:cardBackgroundColor="@color/white"
                android:layout_marginStart="12dp">

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Next Payment"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray_300"
                                android:layout_marginBottom="4dp"/>
                            <TextView
                                android:id="@+id/nextPaymentAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₱0.00"
                                android:textSize="18sp"
                                android:maxLines="1"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="12sp"
                                app:autoSizeMaxTextSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_schedule"
                            app:tint="#EA580C" 
                            android:background="@drawable/bg_info_box"
                            android:backgroundTint="#FFF7ED"
                            android:padding="12dp"/>
                    </LinearLayout>
                    
                    <TextView
                        android:id="@+id/nextPaymentDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No upcoming"
                        android:textColor="@color/gray_300"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Stats Grid Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:weightSum="2"
            android:layout_marginBottom="24dp">

            <!-- Loan Balance -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E7EB"
                app:cardBackgroundColor="@color/white"
                android:layout_marginEnd="12dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Loan Balance"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray_300"
                                android:layout_marginBottom="4dp"/>
                            <TextView
                                android:id="@+id/loanBalanceAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₱0.00"
                                android:textSize="20sp"
                                android:maxLines="1"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="12sp"
                                app:autoSizeMaxTextSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_account_balance"
                            app:tint="#DC2626"
                            android:background="@drawable/bg_info_box"
                            android:backgroundTint="#FEF2F2"
                            android:padding="12dp"/>
                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Outstanding amount"
                        android:textColor="#DC2626"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Pending Apps -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E7EB"
                app:cardBackgroundColor="@color/white"
                android:layout_marginStart="12dp">

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending Apps"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/gray_300"
                                android:layout_marginBottom="4dp"/>
                            <TextView
                                android:id="@+id/pendingAppsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="30sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_pending_actions"
                            app:tint="#9333EA"
                            android:background="@drawable/bg_info_box"
                            android:backgroundTint="#FAF5FF"
                            android:padding="12dp"/>
                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Under review"
                        android:textColor="#2563EB"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Recent Activity List Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E5E7EB"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="24dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="16dp"
                    android:background="#F9FAFB"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Recent Applications"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#1F2937"/>
                    <TextView
                        android:id="@+id/tvViewAllApps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View All"
                        android:textColor="@color/blue_500"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                </LinearLayout>
                
                    <!-- Divider -->
                    <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F3F4F6"/>

                <!-- Mock Item 1 -->
                <LinearLayout
                    android:id="@+id/recentAppItem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="24dp"
                    android:gravity="center_vertical">
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_info_box"
                        android:backgroundTint="#EFF6FF"
                        android:padding="8dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_description"
                            app:tint="@color/blue_900"/>
                    </LinearLayout>
                        
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Personal Loan"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jan 15, 2026"
                            android:textSize="12sp"
                            android:textColor="@color/gray_300"/>
                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending"
                        android:background="@drawable/bg_info_box"
                        android:backgroundTint="#FEF9C3"
                        android:textColor="#854D0E"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="2dp"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                
                    <!-- Divider -->
                    <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F3F4F6"/>

                    <!-- Mock Item 2 -->
                    <LinearLayout
                        android:id="@+id/recentAppItem2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_info_box"
                            android:backgroundTint="#EFF6FF"
                            android:padding="8dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_description"
                                app:tint="@color/blue_900"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Business Loan"
                                android:textStyle="bold"
                                android:textColor="#111827"
                                android:textSize="14sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dec 10, 2025"
                                android:textSize="12sp"
                                android:textColor="@color/gray_300"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Approved"
                            android:background="@drawable/bg_info_box"
                            android:backgroundTint="#DCFCE7"
                            android:textColor="#166534"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="2dp"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Upcoming Appointments Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E5E7EB"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="16dp"
                    android:background="#F9FAFB"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Upcoming Appointments"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#1F2937"/>
                    <TextView
                        android:id="@+id/tvManageAppts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage"
                        android:textColor="@color/blue_500"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                </LinearLayout>
                
                    <!-- Divider -->
                    <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F3F4F6"/>

                    <!-- Mock Appt 1 -->
                <LinearLayout
                    android:id="@+id/apptItem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="24dp"
                    android:gravity="center_vertical">
                    
                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_info_box"
                        android:backgroundTint="#F3F4F6"
                        android:gravity="center"
                        android:padding="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FEB"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_300"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="#111827"/>
                    </LinearLayout>
                        
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loan Consultation"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 AM"
                            android:textSize="12sp"
                            android:drawableStart="@drawable/ic_schedule"
                            android:drawablePadding="4dp"
                            android:drawableTint="@color/gray_300"
                            android:textColor="@color/gray_300"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>
</androidx.core.widget.NestedScrollView>
